<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="es.gdebustamante.inadraft.ui.view.fragment.HomeFragment"
        android:label="@string/nav_graph__fragment_home__title"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_formationListFragment"
            app:destination="@id/formationListFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoTeamFragment"
        android:name="es.gdebustamante.inadraft.ui.view.fragment.TeamInfoListFragment"
        android:label="@string/nav_graph__fragment_team_info_list__title"
        tools:layout="@layout/fragment_team_info_list" >
        <action
            android:id="@+id/action_infoTeamFragment_to_playerListFragment"
            app:destination="@id/playerListFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerListFragment"
        android:name="es.gdebustamante.inadraft.ui.view.fragment.PlayerInfoListFragment"
        android:label="Players"
        tools:layout="@layout/fragment_player_info_list" >
        <argument
            android:name="teamId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/rankingFragment"
        android:name="es.gdebustamante.inadraft.ui.view.fragment.RankingFragment"
        android:label="fragment_ranking"
        tools:layout="@layout/fragment_ranking" />
    <fragment
        android:id="@+id/aboutAppPreferenceFragment"
        android:name="es.gdebustamante.inadraft.ui.view.preference.AboutAppPreferenceFragment"
        android:label="AboutAppPreferenceFragment" />
    <fragment
        android:id="@+id/formationListFragment"
        android:name="es.gdebustamante.inadraft.ui.view.fragment.FormationListFragment"
        android:label="fragment_formation_list"
        tools:layout="@layout/fragment_formation_list" />
</navigation>