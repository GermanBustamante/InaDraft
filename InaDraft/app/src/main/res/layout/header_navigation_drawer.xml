<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_navigation_drawer__root__height"
    android:background="@drawable/bg_futbol_frontier_stadium">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/headerNavDrawerImgInazumaLogo"
        app:shapeAppearance="@style/ShapeAppearance.App.CommonImgRounded"
        android:layout_width="@dimen/header_navigation_drawer__app_logo__width"
        android:layout_marginStart="@dimen/header_navigation_drawer__margin_default"
        android:layout_height="@dimen/header_navigation_drawer__img__app_logo__height"
        android:layout_marginTop="@dimen/header_navigation_drawer__margin_default"
        android:src="@drawable/img__logo__inazuma_eleven"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/headerNavDrawerLabelAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_navigation_drawer__label_app_name"
        android:textColor="@color/labelNavDrawerTitleApp"
        android:textSize="@dimen/header_navigation_drawer__label__app_title__size"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        android:layout_marginTop="@dimen/header_navigation_drawer__margin_min"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/headerNavDrawerImgInazumaLogo"
        app:layout_constraintTop_toBottomOf="@id/headerNavDrawerImgInazumaLogo"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/headerNavDrawerLabelCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_navigation_drawer__label_company_signature"
        android:textColor="@color/labelNavDrawerCompanySignature"
        app:layout_constrainedWidth="true"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/headerNavDrawerLabelAppTitle"
        app:layout_constraintTop_toBottomOf="@id/headerNavDrawerLabelAppTitle"
        app:layout_constraintVertical_bias="0" />
</androidx.constraintlayout.widget.ConstraintLayout>